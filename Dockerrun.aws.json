{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" : [
        {
            "name" : "client",
            "image" : "akaciais/multi-client",
            "hostname": "client",
            "essential" : false
        },
        {
            "name" : "server",
            "image" : "akaciais/multi-server",
            "hostname": "api",
            "essential" : false
        },
        {
            "name" : "client",
            "image" : "akaciais/multi-worker",
            "hostname": "worker",
            "essential" : false
        },
        {
            "name" : "nginx",
            "image" : "akaciais/multi-nginx",
            "hostname": "nginx",
            "essential" : true,
            "portsMappings" : [
                {
                    "hostPort" : "80",
                    "containerPort" :"80"
                }   
            ],
            "links":["client", "server"] 
        }
    ]
}